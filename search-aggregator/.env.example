# MongoDB Connection
MONGO_URI=mongodb://mongodb:27017/LibreChat

# Server Configuration
PORT=3001
NODE_ENV=development

# Search Configuration (comma-separated)
SEARCH_LOCATIONS=New York,Los Angeles,Chicago
SEARCH_CATEGORIES=furniture,apartments,motorcycles,autos

# Cron Schedule (default: every day at 6 AM)
CRON_SCHEDULE=0 6 * * *

# Scraping Configuration
MAX_RESULTS_PER_SEARCH=50
SCRAPE_TIMEOUT_MS=30000

# Platform-specific settings
ENABLE_FACEBOOK=true
ENABLE_CRAIGSLIST=true
ENABLE_OFFERUP=true

# Optional: Facebook credentials (if using authenticated scraping)
# FACEBOOK_EMAIL=
# FACEBOOK_PASSWORD=

# Optional: Proxy settings
# HTTP_PROXY=
# HTTPS_PROXY=
